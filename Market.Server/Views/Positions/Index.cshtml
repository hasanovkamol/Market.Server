@model IEnumerable<Data.Entity.Position>

@{
    ViewData["Title"] = "Index";
}

<section class="header-block-nav pull-right">
    <div class="table-responsive">
       
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus-square"></i>
            Create
        </a>
        <table class="table table-striped table-sm table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Pasition_Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pasition_Name)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


